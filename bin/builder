#!/bin/bash

if [ -z "$2" ]; then
    echo "usage: builder <cpan|gem|fpm> <module name|gem name|directory of source code>"
    exit 1
fi

case $1 in
cpan)
    perlmod.pl $MODULE
    ;;
gem)
    GEM=$1
    makesourcedir($GEM)
    
    ;;
fpm)

    ;;
*)
    echo "You must use either cpan, gem, or fpm as the first argument"
    ;;
esac

makesourcedir () {
    # TODO: parse ~/.rpmmacros to determine dynamically where to create the sourcedir
    mkdir -p ~/rpm/SOURCES/$1
}